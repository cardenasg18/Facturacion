@model IEnumerable<Facturacion.Web.Models.Supplier>

@{
    ViewData["Title"] = "Index";
}

<h2>Suplidores</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Agregar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SupplierName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th>
                Ubicación
                @*@Html.DisplayNameFor(model => model.Location)*@
            </th>
            <th>
                Tipo de suplidor
                @*@Html.DisplayNameFor(model => model.SupplierType)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierType.Type)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.SupplierId">Editar</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.SupplierId">Detalle</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.SupplierId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

            </div>
            <div class="form-group">
                <label asp-for="Telephone" class="control-label"></label>
                <input asp-for="Telephone" class="form-control" />
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationId" class="control-label"></label>
                <select asp-for="LocationId" class="form-control" asp-items="ViewBag.LocationId"></select>
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupplierTypeId" class="control-label"></label>
                <select asp-for="SupplierTypeId" class="form-control" asp-items="ViewBag.SupplierTypeId"></select>
                <span asp-validation-for="SupplierTypeId" class="text-danger"></span>

@model IEnumerable<Facturacion.Web.Models.Shipping>

@{
    ViewData["Title"] = "Index";
}

<h2>Mesas</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Agregar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Mesa 
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShippWay)
            </td>
            <td>
                <a class="btn btn-primary"  asp-action="Edit" asp-route-id="@item.ShippingId">Editar</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.ShippingId">Detalle</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ShippingId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model IEnumerable<Facturacion.Web.Models.Chair>

@{
    ViewData["Title"] = "Index";
}

<h2>Sillas <a class="btn btn-success" asp-action="Create">Agregar</a></h2>

<p>
    
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ChairName)
            </th>
            <th>
                Estado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ChairName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.StatusOf)
            </td>

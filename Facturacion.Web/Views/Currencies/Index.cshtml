@model IEnumerable<Facturacion.Web.Models.Currency>

@{
    ViewData["Title"] = "Index";
}

<h2>Monedas</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Agregar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CurrencyName)
            </th>
            <th>
                Tasa de cambio
                @*@Html.DisplayNameFor(model => model.Exchange)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CurrencyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exchange.ExchangeName)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.CurrencyId">Editar</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.CurrencyId">Detalles</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CurrencyId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

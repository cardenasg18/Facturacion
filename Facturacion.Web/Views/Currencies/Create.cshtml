@model Facturacion.Web.Models.Currency

@{
    ViewData["Title"] = "Create";
}

<h2>Agregar</h2>

<h4>Moneda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CurrencyName" class="control-label"></label>
                <input asp-for="CurrencyName" class="form-control" />
                <span asp-validation-for="CurrencyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExchangeId" class="control-label"></label>
                <select asp-for="ExchangeId" class ="form-control" asp-items="ViewBag.ExchangeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark" asp-action="Index">Regresar</a>
</div>


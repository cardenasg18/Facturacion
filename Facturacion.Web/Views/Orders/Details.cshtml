@model Facturacion.Web.ViewModels.OrderView

@{
    ViewData["Title"] = "Details";
    var id = Model.Order.OrderId;
}


<div class="modal fade" id="adicionarProducto" tabindex="-1" role="dialog" aria-labelledby="gridSystemModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @*<h4 class="modal-title" id="gridSystemModalLabel">Agregar productos</h4>*@
            </div>
            <div class="modal-body">
                @await Html.PartialAsync("AdicionarProducto", Model.OrderDetail, new ViewDataDictionary(ViewData)
                     {
                            {"id", id }

                    });
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
            </div>
         
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<div>
    <h4>Orden</h4>
    <hr />
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-sm-12 col-sm-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2> Orden: @Html.DisplayFor(model => model.Order.OrderId)</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />
                    <div class="article form-group">
                         <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name" >
                             Nombre
                         </label>
                         <div class="col-md-6 col-sm-6 form-control" style="background-color: ivory; ">
                             @Html.DisplayFor(model => model.Order.Customer.FullName)
                         </div>
                    </div>
                    <div class="article form-group">
                         <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name" >
                          @Html.DisplayNameFor(model => model.Order.Payment.Pway)
                         </label>
                         <div class="col-md-6 col-sm-6 form-control" style="background-color: ivory; ">
                             @Html.DisplayFor(model => model.Order.Payment.Pway)
                         </div>
                    </div>
                    <div class="article form-group">
                         <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name" >
                             Forma de envío
                         </label>
                         <div class="col-md-6 col-sm-6 form-control" style="background-color: ivory; ">
                             @Html.DisplayFor(model => model.Order.Shipping.ShippWay)
                         </div>
                    </div>
                    <div class="article form-group">

                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">
                           @Html.DisplayNameFor(model => model.Order.OrderTime)
                        </label>
                        <div class="col-md-6 col-sm-6 form-control" style="background-color: ivory; ">
                            @Html.DisplayFor(model => model.Order.OrderTime)
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Order.OrderId">Editar</a> |
    <a class="btn btn-dark" asp-action="Index">Regresar</a>
</div>
<hr>
@*<button type="button" class="btn btn-success btn-large" data-toggle="modal" data-target="#adicionarArticulo">Adicionar producto</button>*@

<div class="row">
    <div class="col-sm-12 col-sm-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Productos <button type="button" class="btn btn-success btn-large" data-toggle="modal" data-target="#adicionarProducto">Adicionar producto</button></h2>
                
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <table id="grid" name="grid" class=" table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Cantidad</th>
                                        <th>Precio unitario</th>
                                        <th>Precio total</th>
                                    </tr>
                                </thead>
                                <tbody class="data">
                                   @foreach (var article in Model.Details)
                                     {
                                      <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => article.Item.ItemName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => article.Quantity)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => article.UnitPrice)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => article.TotalValue)
                                        </td>
                                      </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="7" style="text-align:right;">@Html.DisplayNameFor(Model => Model.Order.SubTotal)</td>
                                        <td style="text-align:right;" class="valorsub">@Html.DisplayFor(Model => Model.Order.SubTotal)</td>
                                    </tr>
                                    <tr>
                                        <td colspan="7" style="text-align:right;">@Html.DisplayNameFor(Model => Model.Order.Valueimp)</td>
                                        <td style="text-align:right;" class="valori"> 18% </td>
                                    </tr>
                                    <tr>
                                        <td colspan="7" style="text-align:right;">@Html.DisplayNameFor(Model => Model.Order.TotalValue)</td>
                                        <td style="text-align:right;" class="valort">@Html.DisplayFor(Model => Model.Order.TotalValue)</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

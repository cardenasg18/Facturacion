@model IEnumerable<Facturacion.Web.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

    <h2>
         Clientes <a class="btn btn-success" asp-action="Create">Agregar</a>
    </h2>

<p>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                Tipo de Documento
                @*@Html.DisplayNameFor(model => model.DocumentType)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Document)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Email)
            </th>*@
            <th>
                Tipo de Cliente
                @*@Html.DisplayNameFor(model => model.CustomerType)*@
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Country)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DocumentType.TypeDocument)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Document)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.CustomerType.TypeCustomer)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Country.CountryName)
            </td>*@
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.CustomerId">Editar</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.CustomerId">Detalles</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CustomerId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

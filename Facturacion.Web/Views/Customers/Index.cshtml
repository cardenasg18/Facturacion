@model IEnumerable<Facturacion.Web.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h2>Clientes</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Agregar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>           
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>         
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerType.TypeCustomer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.CountryName)
            </td>
            <td>
                <a class="btn btn-primary"  asp-action="Edit" asp-route-id="@item.CustomerId">Editar</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.CustomerId">Detalle</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CustomerId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

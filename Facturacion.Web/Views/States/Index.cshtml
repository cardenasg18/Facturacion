@model IEnumerable<Facturacion.Web.Models.State>

@{
    ViewData["Title"] = "Index";
}

<h2>Provincias</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Agregar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StateName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StateName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.CountryName)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.StateId">Editar</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.StateId">Detalle</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.StateId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

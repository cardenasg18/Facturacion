@model IEnumerable<Facturacion.Web.Models.Unit>

@{
    ViewData["Title"] = "Index";
}

<h2>Unidades de medida</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UnitName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UnitName)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.UnitId">Edit</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.UnitId">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.UnitId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

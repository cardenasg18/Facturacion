@model IEnumerable<Facturacion.Web.Models.Company>

@{
    ViewData["Title"] = "Index";
}

<h2>Empresas</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Agregar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.CompanyId">Editar</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.CompanyId">Detalle</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CompanyId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

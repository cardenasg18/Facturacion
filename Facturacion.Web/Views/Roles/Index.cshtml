@model IEnumerable<Facturacion.Web.Models.Role>

@{
    ViewData["Title"] = "Index";
}

<h2>Roles <a class="btn btn-success" asp-action="Create">Agregar</a></h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.RoleId">Editar</a> |
                <a  class="btn btn-info" asp-action="Details" asp-route-id="@item.RoleId">Detalles</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.RoleId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

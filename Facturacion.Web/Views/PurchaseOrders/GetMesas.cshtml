@model Facturacion.Web.Models.Shipping

<h2>Detalle de factura</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="GetMesas">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ShippingId" class="control-label"></label>
                <select asp-for="ShippingId" class="form-control" asp-items="ViewBag.ShippingId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ShippWay" class="control-label"></label>
                <input asp-for="ShippWay" class="form-control" />
                <span asp-validation-for="ShippWay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-group" style="display:none;">
                    <label asp-for="StatusId" class="control-label"></label>
                    <input asp-for="StatusId" class="form-control" value="@ViewData["id"].ToString()" />
                </div>
            </div>
            <div class="form-group">
                <a class="btn btn-dark" asp-action="Index">Regresar</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
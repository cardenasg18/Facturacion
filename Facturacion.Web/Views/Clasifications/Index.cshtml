@model IEnumerable<Facturacion.Web.Models.Clasification>

@{
    ViewData["Title"] = "Index";
}

<h2>Clasificación de artículos <a class="btn btn-success" asp-action="Create">Agregar</a></h2>


<table class="table">
    <thead>
        <tr>
            <th>
               Categoría
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemType)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ClasificationId">Editar</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.ClasificationId">Detalle</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ClasificationId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model IEnumerable<Facturacion.Web.Models.Location>

@{
    ViewData["Title"] = "Index";
}

<h2>Ubicaciones</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Agregar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reference)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reference)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.CountryName)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.LocationId">Editar</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.LocationId">Detalle</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.LocationId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

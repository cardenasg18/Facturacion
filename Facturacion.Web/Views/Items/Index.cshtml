@model IEnumerable<Facturacion.Web.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<h2>Artículos</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Agregar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemName)
            </th>
            <th>
                Disponibles
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                Precio
            </th>
            <th>
                Categoría
                @*@Html.DisplayNameFor(model => model.Clasification)*@
            </th>
            <th>
                Marca
                @*@Html.DisplayNameFor(model => model.Brand)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitsInStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clasification.ItemType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand.BrandName)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ItemId">Editar</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.ItemId">Detalles</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ItemId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model IEnumerable<Facturacion.Web.Models.Brand>

@{
    ViewData["Title"] = "Index";
}

<h2>Marcas</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Agregar</a>
</p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BrandName)
                </th>
                <th>
                    Empresa
                    @*@Html.DisplayNameFor(model => model.Company*@)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BrandName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Company.CompanyName)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.BrandId">Editar</a> |
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.BrandId">Detalle</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.BrandId">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>

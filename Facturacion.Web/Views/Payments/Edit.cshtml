@model Facturacion.Web.Models.Payment

@{
    ViewData["Title"] = "Edit";
}



<h4>Método de pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PaymentId" />
            <div class="form-group">
                <label asp-for="Pway" class="control-label"></label>
                <input asp-for="Pway" class="form-control" />
                <span asp-validation-for="Pway" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark" asp-action="Index">Regresar</a>
</div>


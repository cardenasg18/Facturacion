@model IEnumerable<Facturacion.Web.Models.CustomerType>

@{
    ViewData["Title"] = "Index";
}

<h2>Tipos de clientes</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TypeCustomer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TypeCustomer)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.CTypeId">Edit</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.CTypeId">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CTypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

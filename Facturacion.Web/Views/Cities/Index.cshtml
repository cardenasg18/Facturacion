@model IEnumerable<Facturacion.Web.Models.City>

@{
    ViewData["Title"] = "Index";
}

<h2>Municipios</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Agregar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State.StateName)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.CityId">Editar</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.CityId">Detalle</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CityId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
